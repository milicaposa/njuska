<div class="col-md-12">
  <div class="main-section">
    <h1>Izmeni podatke</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group">
        <%= f.label :name, "Ime" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :surname, "Prezime" %><br />
        <%= f.text_field :surname, autocomplete: "surname", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :address, "Adresa" %><br />
        <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :phone_number, "Broj telefona" %><br />
        <%= f.text_field :phone_number, autocomplete: "phone_number", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :city, "Grad" %><br />
        <%= f.text_field :city, autocomplete: "city", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password, "Sifra" %> <em>(ostavite prazno polje ukoliko ne zelite da menjate sifru)</em><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> karaktera minimum</em>
        <% end %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, "Potvrdite Sifru" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :current_password, "Trenutna sifra" %> <em>(treba nam Vasa trenutna sifra da bi potvrdili promene)</em><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions form-group">
        <%= f.submit "Izmeni", class: "btn btn-primary" %>
        <%= link_to "Nazad", :back, class: "btn btn-outline-primary" %>
      </div>
    <% end %>

    <div class="text-right">
      <%= button_to "Obrisi nalog", registration_path(resource_name), data: { confirm: "Da li ste sigurni?" }, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>